{
    "compilerOptions": {
      "lib": ["es2022"],
      "target": "es2022",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "@common/*": ["common/*"],
        "@infra/*": ["infra/*"],
        "@modules/*": ["modules/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "*.js"]
  }
  